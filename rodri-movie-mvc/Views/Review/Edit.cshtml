@{
}

@model Review

<section>
    <form asp-controller="Review" asp-action="Edit" method="post">

        <!-- Muestra errores generales del ModelState -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
        <input type="hidden" name="Id" asp-for="Id" />
        <input type="hidden" name="PeliculaId" asp-for="PeliculaId" />
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star5" value="5" checked="@(Model.Rating == 5)">
            <label class="form-check-label" for="star5">
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star4" value="4" checked="@(Model.Rating == 4)">
            <label class="form-check-label" for="star4">
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star3" value="3" checked="@(Model.Rating == 3)">
            <label class="form-check-label" for="star3">
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star2" value="2" checked="@(Model.Rating == 2)">
            <label class="form-check-label" for="star2">
                <i class="fa-solid fa-star text-warning"></i>
                <i class="fa-solid fa-star text-warning"></i>
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star1" value="1" checked="@(Model.Rating == 1)">
            <label class="form-check-label" for="star1">
                <i class="fa-solid fa-star text-warning"></i>
            </label>
        </div>
        <!-- ERROR para Rating (si el modelo lo requiere) -->
        <span asp-validation-for="Rating" class="text-danger"></span>

        <div class="mb-3">
            <label asp-for="@Model.Comentario" class="form-label"></label>
            <textarea class="form-control" asp-for="Comentario" rows="3"></textarea>

            <!-- ERROR para comentario -->
            <span asp-validation-for="Comentario" class="text-danger"></span>
        </div>


        <div class="d-flex justify-content-end gap-2">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</section>