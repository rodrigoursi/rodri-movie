@{
}
@model ReviewCreateViewModel

<!-- Modal -->
<div class="modal fade" id="Modal-res" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Crear Reseña - @Model.PeliculaTitulo</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Review" asp-action="Create" method="post">
                <div class="modal-body">
                
                    <input type="hidden" name="PeliculaId" asp-for="PeliculaId" />
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star5" value="5">
                        <label class="form-check-label" for="star5">
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star4" value="4">
                        <label class="form-check-label" for="star4">
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star3" value="3">
                        <label class="form-check-label" for="star3">
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star2" value="2">
                        <label class="form-check-label" for="star2">
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Rating" name="Rating" id="star1" value="1">
                        <label class="form-check-label" for="star1">
                            <i class="fa-solid fa-star text-warning"></i>
                        </label>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Comentario" class="form-label"></label>
                        <textarea class="form-control" asp-for="Comentario" rows="3"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>