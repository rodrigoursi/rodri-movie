@model Pelicula
@{
    int hora = Model.MinutosDuracion / 60;
    int min = Model.MinutosDuracion % 60;
}

<article>
    <section class="info-pelicula row mb-lg-4">
        <div class="portada col-lg-3">
            <img src="@Model.PosterUrlPortada" alt="@Model.Titulo" />
        </div>
        <div class="detalle col-lg-8">
            <h1>@Model.Titulo</h1>
            <p class="tag-titulo">
                <span class="genero">@Model.Genero?.Descripcion |</span>
                <span class="duracion">@(hora)h @(min)m |</span>
                <span class="fecha">@Model.FechaLanzamiento.ToString("yyyy")</span>
            </p>
            <p class="sinopsis">@Model.Sinopsis</p>
        </div>
    </section>
    <section class="puntaje row mb-lg-4">
        <div class="portada col-lg-3"></div>
        <div class="bg-dark p-4 d-flex col-lg-8 mb-lg-2 card flex-row justify-content-between" data-bs-theme="dark">
            <div class="card-body">
                <h5 class="card-title">4.5</h5>
                <p class="card-text">* * * * *</p>
                <p class="card-text">125 reviews</p>
            </div>
            <div class="w-75">
                <div class="5Estrella text-body d-flex align-items-center">
                    <span class="me-lg-2">5</span>
                    <div class="progress flex-grow-1" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 80%"></div>
                    </div>
                </div>
                <div class="4Estrella text-body d-flex align-items-center">
                    <span class="me-lg-2">4</span>
                    <div class="progress flex-grow-1" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 60%"></div>
                    </div>
                </div>
                <div class="3Estrella text-body d-flex align-items-center">
                    <span class="me-lg-2">3</span>
                    <div class="progress flex-grow-1" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 40%"></div>
                    </div>
                </div>
                <div class="2Estrella text-body d-flex align-items-center">
                    <span class="me-lg-2">2</span>
                    <div class="progress flex-grow-1" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 20%"></div>
                    </div>
                </div>
                <div class="1Estrella text-body d-flex align-items-center">
                    <span class="me-lg-2">1</span>
                    <div class="progress flex-grow-1" role="progressbar" aria-label="Basic example" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 10%"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row cont-botonera-res">
            <div class="portada col-lg-3"></div>
            <div class="col-lg-8"><button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal-res">Crear reseña</button></div>
        </div>
    </section>
    <section class="row">
        <div class="portada col-lg-3"></div>
        <div class="contenedor-cards col-lg-8">
            @if (TempData["ReviewExiste"] is not null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["ReviewExiste"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            <h3>Reviews</h3>
            @foreach (var review in Model.ListaReviews)
            {

                string rating = "";
                for (int i = 0; i < review.Rating; i++)
                {
                    rating += "* ";
                }

                <div class="card bg-dark mb-3 w-75" data-bs-theme="dark">
                    <div class="card-body">
                        <h5 class="card-title">@review.Usuario.Nombre @review.Usuario.Apellido</h5>
                        <p class="card-text">@rating</p>
                        <p class="card-text">
                            @review.Comentario
                        </p>
                    </div>
                </div>
            }
            <div class="card bg-dark mb-3 w-75" data-bs-theme="dark">
                <div class="card-body">
                    <h5 class="card-title">Marta Garcia</h5>
                    <p class="card-text">* * * * *</p>
                    <p class="card-text">Una pelicula espectacular y unos personajes cautivadores. Los efectos
                        visuales son sencillamente impresionantes.
                    </p>
                </div>
            </div>
        </div>
    </section>
</article>
@{
    var reviewCreateVM = new ReviewCreateViewModel
            {
                PeliculaId = Model.Id,
                PeliculaTitulo = Model.Titulo
            };
}
<partial name="~/Views/Review/_CreateReview.cshtml" model="reviewCreateVM" />